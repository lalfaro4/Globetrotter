<div class="main-content planner">
    {{> planner/menubar }}
    <div class="planner-container">
        <div id="planner-trip-panel">
            <div class="planner-panel-header planner-trip-panel-header">
                <label class="planner-valign-text planner-trip-title-label">Trip Name</label>
                <input type="text" id="planner-trip-title-input" class="round planner-trip-title-input" placeholder="Please enter a trip name" value="{{this.trip.trip_name}}" onfocus="var temp_value=this.value; this.value=''; this.value=temp_value" autofocus>
            </div>
            <div id="planner-trip">
                {{> planner/trip activities=this.activities }}
            </div>
            <div class="planner-trip-button-container">
                <div class="round basic-button planner-add-activity-button">+ Add Activity</div>
                <div class="round basic-button planner-trip-save-button">Save</div>
            </div>
        </div>
        <div id="planner-results-panel">
            <div class="planner-panel-header">
                <input type="text" class="round" value="Flight Search Results" style="text-align: center; font-size: large; border-color: white"  disabled></div>
            <div id="planner-results-container">
                <div id="planner-results-placeholder"></div>
            </div>
        </div>
    </div>

    <div class="planner-button-container">
        {{!-- <div class="round basic-button planner-proceed-button">
            Proceed
        </div> --}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
<script src="/public/js/flight-activity.precompiled.js" type="text/javascript"></script>