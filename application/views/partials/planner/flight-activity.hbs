<div class="planner-activity" data-activity-id="{{activity_id}}">
    <label class="">
        <input type="radio" name="planner-selected-activity" checked />
        <div class="round planner-activity-header">
            <div class="planner-halign-text planner-valign-text planner-activity-numeral">{{index}}</div>
            <div class="planner-activity-input-container">
                <input type="text" class="round planner-activity-origin-input" value="{{origin_airport_code}}"
                    list="planner-origin-airports-{{index}}" placeholder="Origin" />
                <datalist type="datalist" id="planner-origin-airports-{{index}}"
                    class="planner-origin-airports-datalist"></datalist>

                <div class="planner-halign-text planner-valign-text">to</div>

                <input type="text" class="round planner-activity-destination-input" value="{{destination_airport_code}}"
                    list="planner-destination-airports-{{index}}" placeholder="Destination" />
                <datalist type="datalist" id="planner-destination-airports-{{index}}"
                    class="planner-destination-airports-datalist"></datalist>

                <input type="date" class="round planner-activity-departure-date" value="{{departure_date}}" />
                <input type="button" class="round basic-button planner-search-activity-button" value="Search" />
                <input type="button" class="round basic-button planner-remove-activity-button" value="Remove" />
            </div>
        </div>
    </label>
    {{#if flight_offer_json_data}}
    <div class="round planner-activity-child-container">
        {{> planner/result-item flight_offer_json_data}}
    </div>
    {{else}}
    <div class="round planner-activity-child-container hidden"></div>
    {{/if}}
</div>