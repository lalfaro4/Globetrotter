<form id  = "registration-profile-form" method="POST" action="/users/register" class="center">
    <h1>Create an account to access Globetrotter</h1>
    <div>{{message}}</div>
    <p class="light-text">Fill the form below to create an account with Globetrotter</p>

    <div class="row">
        <label>First Name:</label>
        <input type="text" name="firstName" placeholder=" Jane" required>
    </div>
    <div class="row">
        <label>Last Name:</label>
        <input type="text" name="lastName" placeholder=" Doe" required>
    </div>
    <div>
        <label for="emailAddress">Email Address:</label>
        <input type="email" name="email" class="form-control" placeholder=" abc@xyz.com" required>
    </div>
    <div>
        <label for="username">Username:</label>
        <input type="text" name="username" class="form-control" placeholder=" Janedoe1" required >
    </div>
    <div>
        <label for="username">Password:</label>
        <input id ="password" type="password" name="password" class="form-control" placeholder=" Password" required pattern="(?=.*?[!@#$%^&*+`~'=?\|\]\[\(\)\-<>/])(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" minlength="8">
       
       <div class="message" id = "password-requirements">
            <h3>Password must contain the following:</h3>
            <p id="lower-case-letter" class="failed">A <b>lowercase</b> letter</p>
            <p id="capital-letter" class="failed">A <b>capital (uppercase)</b> letter</p>
            <p id="length" class="failed">Minimum <b>8 characters</b></p>
            <p id="special-char" class="failed">Minimum <b>1 special character (!@#$%^&*)</b></p>
        </div>
    </div>
    
    <div>
        <label for="username">Confirm Password:</label>
        <input id = "confirm-password" type="password" name="confirmPassword" class="form-control" placeholder=" Password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" minlength="8">
    </div>

    <div class="row">
        <label>Birthday:</label>
        <input type="date" id="birthday" name="birthday" required>
    </div>
    <div class="row">
        <label for="gender">Gender:</label>
        <select name="gender" id="gender">
            <option value="none" selected disabled hidden>
                Select
            </option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select>
    </div>
    <div>
        <label for="address">Address Line 1:</label>
        <input type="text" name="address1" class="form-control" placeholder=" 123 Elm St" required>
    </div>
    <div>
        <label for="address2">Address Line 2:</label>
        <input type="text" name="address2" class="form-control" placeholder=" Apt 2" required>
    </div>
    <div class="row">
        <label>City:</label>
        <input type="text" name="city" placeholder=" San Francisco" required>
    </div>
    <div class="row">
        <label>State:</label>
        <input type="text" name="state" placeholder=" California" required>
    </div>
    <div class="row">
        <label>Zip Code:</label>
        <input type="text" name="zipcode" placeholder=" xxxxx" required>
    </div>
    <div class="row">
        <label>Phone Number:</label>
        <input type="text" name="phoneNumber" placeholder=" +x-xxx-xxx-xxxx" required minlength="11" maxlength="11" pattern=".{11,11}">
    </div>
    <div>
        <p class="light-text">By creating an account you agree with our terms & conditions. This site is protected by
            Globetrotter
            <a href="#">Privacy Policy</a> and <a href="#">Terms of Service</a> apply.
        </p>
    </div>
    <button type="submit" class="button text-center" id = "create-account-button">Create Account</button>
    <p class="light-text">Already have an account? <a href="#">Log in</a></p>
</form>

<script type="text/script" src="/public/js/registration.js"></script>
