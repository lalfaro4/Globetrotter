{{!-- Not sure what to put for the action on the form. --}}
<form method="POST" action="/users/resetpassword" enctype="application/x-www-form-urlencoded">
    <div class="container">
            <h2 class="container-title">Reset Password</h2>

            {{!-- All if the text input fields are grouped in one container --}}
            <div class = "input-fields">

                {{!-- Input field for the Email-address --}}
                <label for="email" class="input-title" >Email Address:</label>
                <input type="email" class="input" name="email" required>

                {{!-- Input field for the Username --}}
                <label for="username" class="input-title">Username:</label>
                <input type="text" class="input" name="username" required>

                {{!-- Input field for the Password --}}
                <label for="password" class="input-title">Password:</label>
                <input type="password" class="input" name="newPassword" required>

            </div>

            <p class="terms-service">By resetting your password you agree to the <a href="/termsandconditions">Terms of Use </a>and <a href="/privacy">Privacy Policy</a></p>

            <input type="submit" class="reset-button button" id="send-button" value="Reset Password"></button>
            <p class="cancel"><a href = "login">Cancel</a></p>
            {{!-- <button class = "cancel-button button">Cancel</button> --}}

    </div>
</form>
